local library = { _Tabs = {}, _Pages = {} }
local services = setmetatable({}, {__index = function(_, k) return game:GetService(k) end})
local ts, uis, players = services.TweenService, services.UserInputService, services.Players
local lp = players.LocalPlayer

local playerGui = game:GetService("CoreGui") -- å»ºè­°ç›´æ¥æ”¾åœ¨ CoreGui é˜²æ­¢æ­»äº¡æ¶ˆå¤±

-- [[ 1. æ‹–ç§»åŠŸèƒ½ï¼šè®“ UI å¯ä»¥è¢«æ»‘é¼ æŠ“è‘—èµ° ]]
function library:AddDrag(obj)
    local dragging, dragInput, dragStart, startPos
    obj.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = obj.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)
    uis.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            obj.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

-- [[ 2. UI åˆå§‹åŒ– ]]
function library.new(name)
    local self = setmetatable({}, {__index = library})
    
    local sg = Instance.new("ScreenGui", playerGui)
    sg.Name = "NekoUI_" .. name
    
    local Main = Instance.new("Frame", sg)
    Main.Size = UDim2.new(0, 400, 0, 280)
    Main.Position = UDim2.new(0.5, -200, 0.5, -140)
    Main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 10)
    self.Main = Main
    
    -- å•Ÿç”¨æ‹–ç§»
    self:AddDrag(Main)
    
    local Sidebar = Instance.new("Frame", Main)
    Sidebar.Size = UDim2.new(0, 100, 1, -20)
    Sidebar.Position = UDim2.new(0, 10, 0, 10)
    Sidebar.BackgroundTransparency = 1
    local layout = Instance.new("UIListLayout", Sidebar)
    layout.Padding = UDim.new(0, 5)
    
    self.Sidebar = Sidebar
    return self
end

-- [[ 3. åˆ†é åŠŸèƒ½ ]]
function library:AddTab(name)
    local Page = Instance.new("ScrollingFrame", self.Main)
    Page.Size = UDim2.new(1, -130, 1, -40)
    Page.Position = UDim2.new(0, 120, 0, 20)
    Page.BackgroundTransparency = 1
    Page.Visible = #self._Pages == 0
    Page.ScrollBarThickness = 2
    local layout = Instance.new("UIListLayout", Page)
    layout.Padding = UDim.new(0, 8)
    
    local TabBtn = Instance.new("TextButton", self.Sidebar)
    TabBtn.Size = UDim2.new(1, 0, 0, 30)
    TabBtn.Text = name
    TabBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Instance.new("UICorner", TabBtn)
    
    TabBtn.MouseButton1Click:Connect(function()
        for _, p in pairs(self._Pages) do p.Visible = false end
        Page.Visible = true
    end)
    
    table.insert(self._Pages, Page)
    
    -- åœ¨ Page ä¸Šæ–°å¢åŠŸèƒ½çš„æ–¹æ³•
    local PageFunctions = {}
    
    -- [[ ğŸŒŸ é‡é»ï¼šæ–°å¢é–‹é—œ (Toggle) åŠŸèƒ½ ]]
    function PageFunctions:AddToggle(text, default, callback)
        local state = default or false
        local ToggleBtn = Instance.new("TextButton", Page)
        ToggleBtn.Size = UDim2.new(1, -10, 0, 35)
        ToggleBtn.BackgroundColor3 = state and Color3.fromRGB(0, 170, 255) or Color3.fromRGB(35, 35, 35)
        ToggleBtn.Text = text .. ": " .. (state and "ON" or "OFF")
        ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        ToggleBtn.Font = Enum.Font.GothamBold
        Instance.new("UICorner", ToggleBtn)

        ToggleBtn.MouseButton1Click:Connect(function()
            state = not state
            ToggleBtn.BackgroundColor3 = state and Color3.fromRGB(0, 170, 255) or Color3.fromRGB(35, 35, 35)
            ToggleBtn.Text = text .. ": " .. (state and "ON" or "OFF")
            callback(state) -- é€™è£¡æœƒå°æ¥åˆ°å¦³çš„æ ¸å¿ƒé‚è¼¯ï¼ˆå¦‚ _G.NekoAttackï¼‰
        end)
    end
    
    return PageFunctions
end

-- [[ ğŸš€ å¯¦æˆ°ç¤ºç¯„ï¼šå¦‚ä½•ä½¿ç”¨é€™å¥— UI ]]
local myGui = library.new("CAT SYSTEM")
local mainTab = myGui:AddTab("Main")

mainTab:AddToggle("è‡ªå‹•æ”»æ“Š (Fast Attack)", false, function(t)
    _G.NekoAttack = t
    print("è‡ªå‹•æ”»æ“Šç¾åœ¨ç‹€æ…‹æ˜¯: ", t)
end)

mainTab:AddToggle("æš´åŠ›è‡ªç„ (Aimbot)", false, function(t)
    _G.AimbotEnabled = t
    print("è‡ªç„ç¾åœ¨ç‹€æ…‹æ˜¯: ", t)
end)
